#include <LiquidCrystal.h>

LiquidCrystal lcd(12, 11, 5, 4, 3, 2);

String nombre = "Tatiana"; 
int len = nombre.length();

void setup() {
  lcd.begin(16, 2); 
}

void loop() {
  for (int pos = 0; pos < len + 16; pos++) {
    lcd.clear(); 
    lcd.setCursor(0, 0); 
    
    for (int i = 0; i < 16; i++) {
      if (i + pos < len) {
        lcd.print(nombre[i + pos]);
      } else {
        lcd.print(" "); 
      }
    }
    delay(300); 
  }
}
