#include <Encoder.h>

const int motorPin = 9; // Pin PWM para el motor
const int potPin = A0;   // Pin del potenci贸metro
Encoder enc(2, 3);       // Pines del encoder

void setup() {
  pinMode(motorPin, OUTPUT);
  Serial.begin(9600);
}

void loop() {
  int potValue = analogRead(potPin); // Leer el potenci贸metro
  int pwmValue = map(potValue, 0, 1023, 0, 255); // Mapear a rango PWM
  analogWrite(motorPin, pwmValue); // Aplicar PWM al motor
  
  long pos = enc.read(); // Leer la posici贸n del encoder
  Serial.print("Posici贸n: ");
  Serial.println(pos);
  
  delay(100);
}
